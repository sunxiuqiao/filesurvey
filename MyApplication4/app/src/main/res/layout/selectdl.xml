<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接号 "
            android:textSize="40px"/>
        <TextView android:id="@+id/linkid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dlmc"
            android:textSize="20px"/>
        <TextView android:id="@+id/dlname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dlxh"
            android:textSize="20px"/>
        <TextView android:id="@+id/dlxhselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20px" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dldj"
            android:textSize="20px"/>
        <TextView android:id="@+id/dldjselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.25">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/djdm"
            android:textSize="20px"/>
        <TextView android:id="@+id/djdmselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20px" />
    </LinearLayout>



</LinearLayout>
